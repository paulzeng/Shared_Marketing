<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ruanmeng.shared_marketing.Partner.PasswordActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider_header" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginTop="@dimen/margin_space"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <EditText
            android:id="@+id/et_pwd_old"
            style="@style/Font13_black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@android:color/white"
            android:hint="请输入旧密码"
            android:paddingLeft="@dimen/margin_space"
            android:inputType="textPassword"
            android:maxLength="20" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginLeft="@dimen/margin_space"
            android:layout_marginRight="@dimen/margin_space"
            android:background="@color/divider" />

        <EditText
            android:id="@+id/et_pwd_new"
            style="@style/Font13_black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@android:color/white"
            android:hint="设置新密码"
            android:paddingLeft="@dimen/margin_space"
            android:inputType="textPassword"
            android:maxLength="20" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginLeft="@dimen/margin_space"
            android:layout_marginRight="@dimen/margin_space"
            android:background="@color/divider" />

        <EditText
            android:id="@+id/et_pwd_confirm"
            style="@style/Font13_black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@android:color/white"
            android:hint="确定新密码"
            android:paddingLeft="@dimen/margin_space"
            android:inputType="textPassword"
            android:maxLength="20" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

</LinearLayout>
