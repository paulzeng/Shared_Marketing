<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mould"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ruanmeng.shared_marketing.Partner.MouldActivity">

    <include layout="@layout/layout_title_mould" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider_header" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fl_mould_screen"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_mould_img"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_space">

                        <TextView
                            android:id="@+id/tv_mould_name"
                            style="@style/Font15_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="名称" />

                        <TextView
                            android:id="@+id/tv_mould_phone"
                            style="@style/Font15_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="电话" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_mould_qr"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="end|bottom"
                    android:layout_margin="@dimen/margin_space" />

            </FrameLayout>

            <Button
                android:id="@+id/btn_mould_change"
                style="@style/Font13_white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginTop="@dimen/margin_space"
                android:background="@drawable/btn_bg_selector"
                android:onClick="doClick"
                android:text="换一张模板" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
