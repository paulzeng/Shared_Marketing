<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ruanmeng.shared_marketing.Partner.MainActivity">

    <FrameLayout
        android:id="@+id/fl_main_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

    <RadioGroup
        android:id="@+id/rg_main_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_main_check_5"
            style="@style/Font12_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/rb_main_selector_7"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="首页"
            android:textSize="10sp"
            android:textColor="@color/rb_main_selector_color" />

        <RadioButton
            android:id="@+id/rb_main_check_1"
            style="@style/Font12_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/rb_main_selector_1"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="客户"
            android:textSize="10sp"
            android:textColor="@color/rb_main_selector_color" />

        <RadioButton
            android:id="@+id/rb_main_check_2"
            style="@style/Font12_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/rb_main_selector_2"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="团队"
            android:textSize="10sp"
            android:textColor="@color/rb_main_selector_color" />

        <RadioButton
            android:id="@+id/rb_main_check_3"
            style="@style/Font12_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/rb_main_selector_3"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="楼盘"
            android:textSize="10sp"
            android:textColor="@color/rb_main_selector_color" />

        <RadioButton
            android:id="@+id/rb_main_check_4"
            style="@style/Font12_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/rb_main_selector_4"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="我的"
            android:textSize="10sp"
            android:textColor="@color/rb_main_selector_color" />

    </RadioGroup>

</LinearLayout>
