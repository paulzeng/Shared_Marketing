<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@mipmap/personal_a15">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_space"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/margin_space">

            <TextView
                android:id="@+id/tv_points_count"
                style="@style/Font15_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="30sp" />

            <TextView
                style="@style/Font13_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="当前积分"
                android:textSize="12sp"
                android:textColor="#A8FFFFFF" />

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <Button
            android:id="@+id/btn_points_exchange"
            style="@style/Font15_white"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height"
            android:layout_weight="1"
            android:background="@drawable/rec_bg_28a0dc"
            android:onClick="doClick"
            android:text="积分兑换" />

        <Button
            android:id="@+id/btn_register_record"
            style="@style/Font15_white"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/rec_bg_red"
            android:onClick="doClick"
            android:text="积分兑换记录" />

    </LinearLayout>

    <TextView
        style="@style/Font13_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/personal_a16"
        android:drawablePadding="3dp"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_space"
        android:text="积分获取记录" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginLeft="@dimen/margin_space"
        android:layout_marginRight="@dimen/margin_space"
        android:background="@color/divider" />

</LinearLayout>