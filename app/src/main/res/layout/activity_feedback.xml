<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_feedback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.ruanmeng.shared_marketing.Partner.FeedbackActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider_header" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lv_feedback_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#E2E2E2" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6F6F6"
        android:padding="@dimen/margin_space">

        <EditText
            android:id="@+id/et_feedback_content"
            style="@style/Font13_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rec_bg_white_stroke_a7a7ab"
            android:gravity="top"
            android:hint="请简要描述你在使用产品过程中的问题或建议"
            android:lineSpacingExtra="3dp"
            android:maxLength="144"
            android:paddingBottom="@dimen/margin_space"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="@dimen/margin_space"
            android:textColorHint="@color/light" />

        <Button
            android:id="@+id/btn_feedback_ok"
            style="@style/Font13_white"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_bg_selector"
            android:onClick="doClick"
            android:text="发送" />

    </LinearLayout>

</LinearLayout>
