<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_recommend"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ruanmeng.shared_marketing.Partner.RecommendActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_recommend_info"
                style="@style/Font15_light"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="doClick"
                android:paddingLeft="@dimen/margin_space"
                android:text="推荐用户说明"
                android:textColor="@color/colorAccent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_space"
                    android:paddingRight="@dimen/margin_space">

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/ico_xing" />

                    <TextView
                        style="@style/Font13_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="姓名：" />

                    <EditText
                        android:id="@+id/et_recommend_name"
                        style="@style/Font13_black"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:hint="请输入推荐客户真实姓名"
                        android:maxLength="5" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginLeft="@dimen/margin_space"
                    android:layout_marginRight="@dimen/margin_space"
                    android:background="@color/divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_space"
                    android:paddingRight="@dimen/margin_space">

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/ico_xing" />

                    <TextView
                        style="@style/Font13_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="手机：" />

                    <EditText
                        android:id="@+id/et_recommend_phone"
                        style="@style/Font13_black"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:hint="请输入推荐客户手机号"
                        android:inputType="phone"
                        android:maxLength="11" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginLeft="@dimen/margin_space"
                    android:layout_marginRight="@dimen/margin_space"
                    android:background="@color/divider" />

                <LinearLayout
                    android:id="@+id/ll_recommend_project"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:onClick="doClick"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_space"
                    android:paddingRight="@dimen/margin_space">

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/ico_xing" />

                    <TextView
                        style="@style/Font13_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="项目：" />

                    <TextView
                        android:id="@+id/tv_recommend_project"
                        style="@style/Font13_black"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:hint="请选择项目"
                        android:maxLength="10" />

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:src="@mipmap/arrow_right" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginLeft="@dimen/margin_space"
                    android:layout_marginRight="@dimen/margin_space"
                    android:background="@color/divider" />

                <LinearLayout
                    android:id="@+id/ll_recommend_hu"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:onClick="doClick"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_space"
                    android:paddingRight="@dimen/margin_space">

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/ico_xing"
                        android:visibility="invisible" />

                    <TextView
                        style="@style/Font13_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="户型：" />

                    <TextView
                        android:id="@+id/tv_recommend_hu"
                        style="@style/Font13_black"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:hint="请选择户型"
                        android:maxLength="10" />

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:src="@mipmap/arrow_right" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginLeft="@dimen/margin_space"
                    android:layout_marginRight="@dimen/margin_space"
                    android:background="@color/divider" />

                <LinearLayout
                    android:id="@+id/ll_recommend_qu"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:onClick="doClick"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_space"
                    android:paddingRight="@dimen/margin_space">

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/ico_xing"
                        android:visibility="invisible" />

                    <TextView
                        style="@style/Font13_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="区域：" />

                    <TextView
                        android:id="@+id/tv_recommend_qu"
                        style="@style/Font13_black"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:hint="请选择区域"
                        android:maxLength="10" />

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:src="@mipmap/arrow_right" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginLeft="@dimen/margin_space"
                    android:layout_marginRight="@dimen/margin_space"
                    android:background="@color/divider" />

                <LinearLayout
                    android:id="@+id/ll_recommend_ye"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:onClick="doClick"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_space"
                    android:paddingRight="@dimen/margin_space">

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/ico_xing"
                        android:visibility="invisible" />

                    <TextView
                        style="@style/Font13_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="业态：" />

                    <TextView
                        android:id="@+id/tv_recommend_ye"
                        style="@style/Font13_black"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:hint="请选择业态" />

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:src="@mipmap/arrow_right" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginLeft="@dimen/margin_space"
                    android:layout_marginRight="@dimen/margin_space"
                    android:background="@color/divider" />

                <LinearLayout
                    android:id="@+id/ll_recommend_zhi"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:onClick="doClick"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_space"
                    android:paddingRight="@dimen/margin_space">

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/ico_xing"
                        android:visibility="invisible" />

                    <TextView
                        style="@style/Font13_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="置业顾问：" />

                    <TextView
                        android:id="@+id/tv_recommend_zhi"
                        style="@style/Font13_black"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:hint="请选择置业顾问" />

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:src="@mipmap/arrow_right" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginLeft="@dimen/margin_space"
                    android:layout_marginRight="@dimen/margin_space"
                    android:background="@color/divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_space"
                    android:paddingRight="@dimen/margin_space">

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/ico_xing"
                        android:visibility="invisible" />

                    <TextView
                        style="@style/Font13_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="身份证：" />

                    <EditText
                        android:id="@+id/et_recommend_id"
                        style="@style/Font13_black"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:digits="0123456789Xx"
                        android:gravity="center_vertical"
                        android:hint="请输入推荐客户身份证"
                        android:inputType="number"
                        android:maxLength="18" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginLeft="@dimen/margin_space"
                    android:layout_marginRight="@dimen/margin_space"
                    android:background="@color/divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_space"
                    android:paddingRight="@dimen/margin_space">

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/ico_xing"
                        android:visibility="invisible" />

                    <TextView
                        style="@style/Font13_black"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/line_height"
                        android:layout_gravity="start"
                        android:gravity="center_vertical"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="备注：" />

                    <EditText
                        android:id="@+id/et_recommend_memo"
                        style="@style/Font13_black"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="start"
                        android:maxLength="144"
                        android:minLines="5"
                        android:paddingBottom="14dp"
                        android:paddingTop="14dp" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/divider" />

            <Button
                android:id="@+id/btn_recommend_submit"
                style="@style/Font13_white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="20dp"
                android:background="@drawable/btn_bg_selector"
                android:onClick="doClick"
                android:text="提交" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
