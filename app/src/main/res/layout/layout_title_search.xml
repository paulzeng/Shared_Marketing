<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="?attr/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/rec_bg_white_stroke_a7a7ab"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:paddingLeft="10dp"
                android:src="@mipmap/ico_search" />

            <EditText
                android:id="@+id/et_layout_title_search"
                style="@style/Font13_black"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:singleLine="true"
                android:paddingLeft="5dp"
                android:imeOptions="actionSearch"
                android:hint="请输入客户的姓名或电话" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_layout_title_cancel"
            style="@style/Font15_black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:onClick="doClick"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/colorAccent"
            android:text="取消" />

    </LinearLayout>

</FrameLayout>