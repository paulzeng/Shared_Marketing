<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:id="@+id/layout_title_customer"
    android:background="?attr/colorPrimary">

    <TextView
        android:id="@+id/tv_fragment_customer_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="客户"/>

    <TextView
        android:id="@+id/tv_fragment_customer_location"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:clickable="true"
        android:onClick="doClick"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:drawableLeft="@mipmap/ico_map"
        android:drawableRight="@mipmap/ico_down"
        android:drawablePadding="3dp"
        android:text="洛阳"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:paddingRight="5dp">

        <ImageView
            android:id="@+id/iv_fragment_customer_msg"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:clickable="true"
            android:onClick="doClick"
            android:padding="5dp"
            android:src="@mipmap/ico_ann_b" />

        <ImageView
            android:id="@+id/iv_fragment_customer_search"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:clickable="true"
            android:onClick="doClick"
            android:padding="5dp"
            android:src="@mipmap/ico_soso" />

        <ImageView
            android:id="@+id/iv_fragment_customer_filter"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:clickable="true"
            android:onClick="doClick"
            android:padding="8dp"
            android:src="@mipmap/icon_sx"
            android:visibility="gone" />

    </LinearLayout>

</FrameLayout>