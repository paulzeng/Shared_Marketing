<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EEFFFFFF"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="输入密码"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_dialog_withdraw_close"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:onClick="doClick"
            android:padding="12dp"
            android:src="@mipmap/wrong" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

    <TextView
        android:id="@+id/tv_dialog_withdraw_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:text="提现0元"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <com.jungly.gridpasswordview.GridPasswordView
        android:id="@+id/gpv_dialog_withdraw_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:gpvLineColor="@color/light"
        app:gpvLineWidth="@dimen/divider_height"
        app:gpvTextColor="@color/black"
        app:gpvCornerRadius="3dp" />

    <TextView
        android:id="@+id/tv_dialog_withdraw_forget"
        style="@style/Font13_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="15dp"
        android:clickable="true"
        android:gravity="center"
        android:onClick="doClick"
        android:paddingBottom="@dimen/margin_space"
        android:paddingTop="@dimen/margin_space"
        android:text="忘记密码？"
        android:textColor="@color/blue" />

</LinearLayout>