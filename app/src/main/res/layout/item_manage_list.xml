<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/margin_space"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_space">

        <TextView
            android:id="@+id/tv_item_manage_name"
            style="@style/Font15_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名称"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_item_manage_phone"
            style="@style/Font13_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="手机号码" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_item_manage_trans"
            style="@style/Font13_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_space"
            android:paddingRight="@dimen/margin_space"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="批量转移客户"
            android:background="@drawable/rec_bg_red" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginLeft="@dimen/margin_space"
        android:layout_marginRight="@dimen/margin_space"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_space"
        android:paddingRight="@dimen/margin_space"
        android:paddingTop="@dimen/margin_space">

        <TextView
            style="@style/Font13_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抢单：" />

        <TextView
            android:id="@+id/tv_item_manage_qiang"
            style="@style/Font13_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0" />

        <TextView
            style="@style/Font13_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去电：" />

        <TextView
            android:id="@+id/tv_item_manage_qu"
            style="@style/Font13_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0" />

        <TextView
            style="@style/Font13_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来访：" />

        <TextView
            android:id="@+id/tv_item_manage_lai"
            style="@style/Font13_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_space">

        <TextView
            style="@style/Font13_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="认购：" />

        <TextView
            android:id="@+id/tv_item_manage_ren"
            style="@style/Font13_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0" />

        <TextView
            style="@style/Font13_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签约：" />

        <TextView
            android:id="@+id/tv_item_manage_qian"
            style="@style/Font13_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0" />

        <TextView
            style="@style/Font13_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来访："
            android:visibility="invisible"/>

        <TextView
            style="@style/Font13_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

</LinearLayout>