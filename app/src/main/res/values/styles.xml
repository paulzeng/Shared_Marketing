<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- Actionbar color Actionbar的背景色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Status bar color 状态栏背景色 -->
        <item name="colorPrimaryDark">@color/navigationBarColor</item>
        <!-- 各控制元件(如：check box、switch 或是 radiobutton) 被勾选 (checked) 或是选定 (selected) 的颜色 -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Window color App的背景色 -->
        <item name="android:colorBackground">@color/background</item>
        <!--App bar 上的标题与更多菜单中的文字颜色-->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- toolbar的主题-->
        <item name="toolbarStyle">@style/CustomToolbar</item>
    </style>

    <style name="CustomToolbar" parent="Widget.AppCompat.Toolbar">
        <!-- 设置该属性解决空白部分-->
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>

    <style name="Font15_black">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/colorControlNormal</item>
    </style>

